<h1>RailsBridgeCorp Open Jobs</h1>
<h2>Job Postings</h2>
<table>
	<thead>
	    <tr>
	      <th>Title</th>
	      <th>Description</th>
	      <th colspan="3"></th>
	    </tr>
	</thead>
	<tbody>
		<% @jobs.each do |job| %>
			<tr>
				<td><%= job.title %></td>
				<td><%= job.description %></td>
				<td><%= link_to "Show Posting", job %></td>
			</tr>
		<% end %>
	</tbody>
</table>